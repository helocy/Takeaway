<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    	xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/id_layout_title_bar"
        android:layout_width="fill_parent"
        android:layout_height="72sp"
        android:background="@drawable/title_bar">
        
        <Button 
            android:id="@+id/id_btn_return"
            android:layout_width="48sp"
            android:layout_height="48sp"
            android:contentDescription="@string/str_desc_return"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10sp"
            android:layout_marginStart="10sp"
            android:background="@drawable/back"/>
        
        <TextView 
            android:id="@+id/id_text_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:textSize="36sp"
            android:gravity="center"/>
        
        <Button 
            android:id="@+id/id_btn_about"
            android:layout_width="48sp"
            android:layout_height="48sp"
            android:contentDescription="@string/str_desc_about"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10sp"
            android:layout_marginEnd="10sp"
            android:background="@drawable/about"/>
</RelativeLayout>
